@using Multicars.Models.BD

@model IEnumerable<Grupos>

<a asp-controller="Multicars" class="btn btn-primary" asp-action="Cadastrar_grupos">New Group</a>
<br>
<br>

<style>
    body {
        background-color: #006064
    }

    .table {
        background-color: white;
    }
</style>
@if (Model == null)
{

}
else if (Model.Any())
{
    <table class="table table-dark table-striped">
        <thead>
        <th>Group</th>
        <th>Money</th>
        <th>+Info</th>
        </thead>
        <tbody>
            @foreach (var grupo in Model)
            {
                <tr>
                    <td>@grupo.nome</td>
                    <td>@grupo.valor</td>
                    <td><a asp-controller="Multicars" class="btn btn-outline-info" asp-action="Editar_grupos" asp-route-id="@grupo.id">Edit Groups</a></td>

                </tr>
            }
        </tbody>
    </table>
}
