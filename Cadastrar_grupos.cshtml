@using Multicars.Models.BD;
@model Grupos

<form method="post" asp-action="Cadastrar_grupos">

    <div asp-validation-summary="All" class="text-danger"></div>

    <label asp-for="nome" class="col-sm-2 col-form-label"></label>
    <input asp-for="nome" class="form-control" />

    <label asp-for="valor" class="col-sm-2 col-form-label"></label>
    <input asp-for="valor" class="form-control" />

    <button class="btn btn-primary" type="submit">Cadastrar Grupo</button>

</form>