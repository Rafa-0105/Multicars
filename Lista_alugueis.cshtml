@using Multicars.Models.BD

@model IEnumerable<Alugueis>

<a asp-controller="Multicars" class="btn btn-primary" asp-action="Cadastrar_aluguel">New Rent</a>
<br>
<br>

<style>
    .table {
        background-color: white;
    }
</style>
@if (Model == null)
{

}
else if (Model.Any())
{
    <table class="table table-dark table-striped">
        <thead class="table-Secondary">
        <th>Client</th>
        <th>CNH</th>
        <th>Vehicle N°</th>
        <th>Daily value</th>
        <th>Rented date</th>
        <th>Return date</th>
        <th>+info</th>
        </thead>
        <tbody>
            @foreach (var alugueis in Model)
            {
                <tr class="align-middle">
                    <td>@alugueis.id</td>
                    <td>@alugueis.CNH</td>
                    <td>@alugueis.id_carro</td>
                    <td>@alugueis.valor</td>
                    <td>@alugueis.Data_alugada</td>
                    <td>@alugueis.Data_retorno</td>
                    <td><a asp-controller="Multicars" class="btn btn-outline-info" asp-action="Editar_carros" asp-route-id="@alugueis.id">+ Rental info</a></td>

                </tr>
            }
        </tbody>
    </table>
}
