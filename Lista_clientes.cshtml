@using Multicars.Models.BD

@model IEnumerable<Cliente>

<a asp-controller="Multicars" class="btn btn-primary" asp-action="Cadastrar_clientes">Novo Cliente</a>
<br>
<br>

<style>
    body {
        background-color: #006064
    }

    .table {
        background-color: lightskyblue;
    }
</style>
@if (Model == null)
{

}
else if (Model.Any())
{
    <table class="table table-dark table-striped">
        <thead class="table-Secondary">
        <th>CNH</th>
        <th>nome</th>
        <th>Data de Nascimento</th>
        <th>+info</th>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr class="align-middle">
                    <td>@cliente.CNH</td>
                    <td>@cliente.nome</td>
                    <td>@cliente.Data_Nasc</td>
                    <td><a asp-controller="Multicars" class="btn btn-outline-info" asp-action="Editar_cliente" asp-route-id="@cliente.CNH">Editar Cliente</a></td>

                </tr>
            }
        </tbody>
    </table>
}